<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_warning"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Cảnh báo"
            android:textSize="18sp"
            android:textColor="@color/colorred"/>

    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblack"
        android:text="Bạn đang thực hiện hủy đặt phòng Super Deluxe L1. Việc này có thể khiến bạn mất phí đặt phòng. Bạn có chắc chắn muốn tiếp tục?"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Xem thêm về chính sách hủy đặt phòng"
            android:textColor="@color/colorblack"/>
        <TextView
            android:id="@+id/txtODay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Ở đây."
            android:textColor="@color/colorXanhDen"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnHuyThaoTac"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Hủy thao tác"
            android:textColor="@color/colorXanhDen"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"/>
        <Button
            android:id="@+id/btnTiepTuc"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textColor="@color/colorXanhDen"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button_tracuu" />
    </LinearLayout>


</LinearLayout>