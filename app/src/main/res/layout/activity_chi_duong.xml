<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.ChiDuongActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarTimDuongDi"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉ đường"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorXanhDen"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm đường đi"
        android:textColor="#0F4E29"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gps"
            android:layout_gravity="center"/>
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Vị trí hiện tại"
            android:background="@drawable/custom_button_vienxam"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/placeholder"
            android:layout_gravity="center"/>
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Lan Phương Homestay"
            android:background="@drawable/custom_button_vienxam"
            android:padding="10dp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"/>


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:background="@drawable/vehicle"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hinh_chiduong"/>
    
    

</LinearLayout>