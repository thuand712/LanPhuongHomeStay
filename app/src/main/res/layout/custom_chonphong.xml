<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_dobong"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:weightSum="8">

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="375.500 VNĐ"
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Chỉ còn 3 phòng"
                android:textColor="@color/colorred"
                android:textStyle="italic"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenPhongChonPhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_nosmoking"
                android:text="Super Deluxe L1"
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/bed"
                    android:gravity="center"
                    android:text="1 giường đôi"
                    android:textColor="@color/colorblack"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_user_chonphong"
                    android:gravity="center"
                    android:text="2 người lớn"
                    android:textColor="@color/colorblack"
                    android:textSize="12sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tủ lạnh"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ti vi"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/colorblack"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điều hòa"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điện thoại"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ổ điện"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quạt máy"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khăn tắm"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bàn chải"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dép"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tủ quần áo"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vòi sen"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Hồ Xuân Hương"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ban công"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Không cọc trước"
                        android:textColor="@color/colorblack"
                        android:textSize="9sp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/icon_dot_chonphong"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Spinner
                    android:id="@+id/spinnerSoPhong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_vienxam"
                    android:textColor="@color/colorGray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btnDatPhongNayChonPhong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="Đặt phòng này"
                    android:textAllCaps="false"
                    android:textColor="@color/colorXanhDen"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12">
        <ImageView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/hinh1_cp"/>

    </LinearLayout>



</FrameLayout>