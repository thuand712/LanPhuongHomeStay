<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.QuanLyDatPhongActivity"
    tools:showIn="@layout/app_bar_quanlydatphong">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử đặt phòng của bạn"
                android:textColor="@color/colorXanhDen1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tháng 12/2019"
                android:textStyle="italic"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#C5C5B4"/>

            <ListView
                android:layout_marginTop="10dp"
                android:id="@+id/lvThang12"
                android:layout_width="match_parent"
                android:layout_height="450dp">

            </ListView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tháng 11/2019"
                android:textStyle="italic"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#C5C5B4"/>

            <ListView
                android:id="@+id/lvThang11"
                android:layout_width="match_parent"
                android:layout_height="900dp">

            </ListView>




        </LinearLayout>


    </ScrollView>

</LinearLayout>