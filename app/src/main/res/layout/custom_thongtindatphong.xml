<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@drawable/custom_dobong">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTenPhongChiTietDatPhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Super Deluxe L1"
                android:textStyle="bold"
                android:textColor="@color/colorblack"
                android:gravity="center"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/imgChiTietL1"
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:text="1 giường đôi"
                        android:drawableLeft="@drawable/bed"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="Không cần cọc"
                        android:drawableLeft="@drawable/icon_pay_ttdp"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:text="Không hút thuốc"
                        android:drawableLeft="@drawable/icon_nosmoking"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="2 người lớn"
                        android:drawableLeft="@drawable/icon_user_chonphong"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="Thanh toán tại chỗ"
                        android:drawableLeft="@drawable/icon_pay_ttdp"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="Không hoàn tiền"
                        android:drawableLeft="@drawable/icon_norefurd_ttdp"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"/>
                </TableRow>
            </TableLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đầy đủ của khách hàng:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Thị Tâm"
                android:textStyle="bold"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext_chonngay"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đầy đủ của khách hàng:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext_chonngay"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="italic"
                android:text="Yêu cầu đặc biệt không thể được đảm bảo và có thể tính phí - nhưng chỗ nghỉ sẽ cố gắng hết sức để đáp ứng nhu cầu của bạn."
                />
        </LinearLayout>





    </LinearLayout>
</LinearLayout>